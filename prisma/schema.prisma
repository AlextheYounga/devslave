generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum AgentStatus {
  PREPARING
  LAUNCHED
  RUNNING
  COMPLETED
  FAILED
}

model Agent {
  id          String      @id @default(cuid())
  executionId String
  sessionId   String?
  tmuxSession String?
  role        String?
  logFile     String?
  prompt      String?
  status      AgentStatus @default(PREPARING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("agents")
}

model Codebase {
  id        String   @id @default(cuid())
  name      String
  path      String
  setup     Boolean  @default(false)
  data      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tickets Ticket[]

  @@map("codebases")
}

model Events {
  id        String   @id @default(cuid())
  parentId  String?
  type      String
  data      Json?
  timestamp DateTime @default(now())

  @@map("events")
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  QA_REVIEW
  QA_CHANGES_REQUESTED
  CLOSED
}

model Ticket {
  id          String       @id @default(cuid())
  codebaseId  String
  ticketId    String
  branchName  String
  title       String
  description String?
  ticketFile  String
  status      TicketStatus @default(OPEN)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  codebase Codebase @relation(fields: [codebaseId], references: [id], onDelete: Cascade)

  @@map("tickets")
}
