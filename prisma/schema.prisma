generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Job {
  id        Int      @id @default(autoincrement())
  type      String
  payload   Json
  status    String   @default("pending")
  priority  Int      @default(0)
  retries   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events Events[]

  @@map("jobs")
}

model Codebase {
  id        Int      @id @default(autoincrement())
  name      String
  path      String
  data      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  events   Events[]
  tickets  Ticket[]
  branches Branch[]

  @@map("codebases")
}

model Events {
  id         Int      @id @default(autoincrement())
  jobId      Int
  codebaseId Int
  parentId   Int?
  type       String
  data       Json?
  timestamp  DateTime @default(now())

  codebase Codebase @relation(fields: [codebaseId], references: [id])
  job      Job      @relation(fields: [jobId], references: [id])

  @@map("events")
}

model Ticket {
  id          Int      @id @default(autoincrement())
  codebaseId  Int
  title       String
  description String?
  status      String   @default("open")
  priority    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  codebase Codebase @relation(fields: [codebaseId], references: [id])
  branches Branch[]

  @@map("tickets")
}

model Branch {
  id         Int      @id @default(autoincrement())
  codebaseId Int
  ticketId   Int
  name       String
  createdAt  DateTime @default(now())

  ticket   Ticket   @relation(fields: [ticketId], references: [id])
  codebase Codebase @relation(fields: [codebaseId], references: [id])

  @@map("branches")
}
