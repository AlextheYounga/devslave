generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum AgentStatus {
  PREPARING
  LAUNCHED
  RUNNING
  COMPLETED
  FAILED
}

model Agent {
  id          String      @id @default(cuid())
  executionId String
  sessionId   String?
  tmuxSession String?
  role        String?
  pid         Int?
  logFile     String?
  status      AgentStatus @default(PREPARING)
  inputs      Json?
  context     Json?
  createdAt   DateTime    @default(now())

  @@map("agents")
}

model Codebase {
  id        String   @id @default(cuid())
  name      String
  path      String
  data      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tickets  Ticket[]
  branches Branch[]

  @@map("codebases")
}

model Events {
  id        String   @id @default(cuid())
  parentId  String?
  type      String
  data      Json?
  timestamp DateTime @default(now())

  @@map("events")
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  IN_REVIEW
  CLOSED
  REOPENED
}

model Ticket {
  id          String       @id @default(cuid())
  codebaseId  String
  ticketId    String
  title       String
  description String?
  status      TicketStatus @default(OPEN)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  codebase Codebase @relation(fields: [codebaseId], references: [id], onDelete: Cascade)
  branches Branch[]

  @@map("tickets")
}

model Branch {
  id         String   @id @default(cuid())
  codebaseId String
  ticketId   String?
  name       String
  worktree   String
  data       Json?
  createdAt  DateTime @default(now())

  ticket   Ticket?  @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  codebase Codebase @relation(fields: [codebaseId], references: [id], onDelete: Cascade)

  @@map("branches")
}
